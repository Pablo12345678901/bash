#!/usr/bin/env bash

# Calculatrice supportant les floats
# L'argument doit être transmis entre guillemets simples

if [ "$1" == "affichage" ] # si le premier argument est "affichage"
then
    ARGUMENT="$(echo "$@" | tr '\n' ' ')" # Conservation du calcul pour affichage
    awk -v CALCUL="$ARGUMENT" "BEGIN{ print \"Calcul : \" CALCUL \"= \" $* }"
else
    awk "BEGIN{ print $* }" # sinon, fourni le résultat uniquement
    # pour utilisation dans des scripts
fi
