#!/usr/bin/env bash

# Syntaxe :
# - : pas d'argument à fournir

# DEBUG
echo -e "\nScript $(basename $0) en cours de développement - pas au point...\n"
sudo systemctl stop bluetooth.service
echo $?
exit 0

# Comme l'utilitaire de blueutil n'est pas intégré d'office, je teste s'il l'est et sinon l'installe
which blueutil > /dev/null # test de la commande si existe
if (($?))
then
  echo "Installation de blueutil"
  brew install blueutil >&2
else
  :
fi

blueutil --power 0 && echo -e "\nLe bluetooth est désormais éteint.\n" || echo "Le bluetooth n'a pas pu être éteint."
