#!/usr/bin/env bash

# Fonction pour éviter un ajout de path à double dans $PATH
################################
# _remove $1 from PATH
_path_del() {
    local _l=":$PATH:"
    while [[ $_l =~ :$1: ]]; do
          _l=${_l//:$1:/:}
    done
    _l=${_l%:}
    _l=${_l#:}
    PATH="$_l"
}

# _prepend : prepend $1 to PATH.
_path_prepend() {
    _path_del "$1"
    PATH="$1:$PATH"
}

# _append : append $1 to PATH.
_path_append() {
    _path_del "$1"
    PATH="$PATH:$1"
}

# _ajout_element_tableau
_ajout_au_tableau_des_paths() {
    liste_path[$index_tableau]="$1"
    ((index_tableau++)) # incrémentation de l'index du tableau à chaque ajout
}

################################
REPERTOIRE_DES_COMMANDES_PERSO='/Users/pablo/Desktop/Developpement/bash/bin' # path du répertoire des commandes perso - à adapter si changement d'environnement
export REPERTOIRE_DES_COMMANDES_PERSO # pour utilisation dans le script qui sauvegarde ce profil

declare -a liste_path # tableau des paths à ajouter manuellement
index_tableau=0 # var nécessaire pour le tableau des path - NE PAS SUPPRIMER
_ajout_au_tableau_des_paths '/usr/local/opt/llvm/bin'
_ajout_au_tableau_des_paths '/usr/local/opt/openjdk/bin'
_ajout_au_tableau_des_paths $REPERTOIRE_DES_COMMANDES_PERSO

# Ajouter chaque élément du tableau au path
for path_a_ajoute in "${liste_path[@]}"; do
    _path_del $path_a_ajoute # supprime les doublons
    _path_append $path_a_ajoute # ajoute en fin
done

export PATH

# Sauvegarde du profil dans le répertoire perso
{ cd $REPERTOIRE_DES_COMMANDES_PERSO &&
cp ~/.profile sauvegarde_profil_bash && # sauvegarde du profile utilisé dans le répertoire perso
cd $OLDPWD ; } || echo -e "Le fichier .profile n'a pas pu être copié dans le répertoire perso.\nDébugger le fichier .profile.\n" >&2 # cd $OLDPWD revient ou j'étais
