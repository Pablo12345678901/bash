#!/usr/bin/env bash

# Syntaxe :
# - : pas d'argument à fournir

COMMANDE="${0##*/}" # nom de la commande utile pour les messages d'erreur

# Voir les script correspondants
git_push_avant_deteindre_ordinateur
disque_dur_ejecter || { echo -e "\nArrêt de la commande \"$COMMANDE\".\n" ; exit 1 ; }
app_fermer || { echo -e "\nArrêt de la commande \"$COMMANDE\" sur demande de l'utilisateur.\n" ; exit 1 ; }
corbeille_vider
bluetooth_eteindre

# Redémarrer l'ordinateur
echo -e "\nSaisissez votre mot de passe et l'ordinateur redémarrera IMMEDIATEMENT."
echo -e "Annulez avec CTRL+C\n"
sudo shutdown -r now || # "-r" pour reboot = redémarrer
{ echo -e "\nERREUR : la commande \"$COMMANDE\" a échoué.\n" ; exit 1 ; }